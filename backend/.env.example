# SportsPickMind Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sportspickmind?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Sports Data API Configuration
SPORTS_API_KEY=your-sports-api-key-here
SPORTS_API_BASE_URL=https://api.thesportsdb.com/api/v1/json

# RSS Feed URLs
ESPN_RSS_URL=https://www.espn.com/espn/rss/news
BLEACHER_REPORT_RSS_URL=https://bleacherreport.com/articles.rss

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
